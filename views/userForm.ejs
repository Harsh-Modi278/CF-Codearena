        <form method="post" action="/">
            <div class="mb-3">
                <label for="user" style="font-size:20px" class="form-label">Enter your Codeforces Handle </label>
                <input type="text" id="user" class="form-control" placeholder="Enter CF-Handle"name="user" required><br>
            </div>
            <div class="buttons">
                <button type="submit" class="problem btn btn-dark">SUBMIT</button>
            </div>
        </form>
    </div>
    
    <script src="http://localhost:5000/socket.io/socket.io.js"> </script>
